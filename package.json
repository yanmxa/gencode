{
  "name": "gencode-ai",
  "version": "0.4.1",
  "description": "An open-source AI assistant for your terminal",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gencode": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "start:dev": "npx tsx src/cli/index.tsx",
    "restart": "npm run build && npm start",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "example": "npx tsx examples/basic.ts",
    "test:components": "npx tsx scripts/tests/test-component-loading.ts",
    "test:skills:load": "npx tsx scripts/tests/test-skills-loading.ts",
    "test:commands:load": "npx tsx scripts/tests/test-commands-loading.ts",
    "test:subagents:load": "npx tsx scripts/tests/test-subagents-loading.ts",
    "test:hooks:load": "npx tsx scripts/tests/test-hooks-loading.ts",
    "test:mcp:load": "npx tsx scripts/tests/test-mcp-loading.ts",
    "test:skills:func": "GEN_DEBUG=2 npx tsx scripts/tests/test-skills-functional.ts",
    "test:commands:func": "GEN_DEBUG=2 npx tsx scripts/tests/test-commands-functional.ts",
    "test:subagents:func": "GEN_DEBUG=2 npx tsx scripts/tests/test-subagents-functional.ts",
    "test:hooks:func": "GEN_DEBUG=2 npx tsx scripts/tests/test-hooks-functional.ts",
    "test:functional": "npx tsx scripts/tests/test-functional-all.ts",
    "test:all": "npm run test:components && npm run test:functional"
  },
  "keywords": [
    "agent",
    "llm",
    "openai",
    "anthropic",
    "gemini",
    "ai"
  ],
  "author": "Meng Yan",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/diff": "^5.0.9",
    "@types/turndown": "^5.0.6",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "diff": "^5.1.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "glob": "^13.0.0",
    "google-auth-library": "^10.5.0",
    "gray-matter": "^4.0.3",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^17.0.1",
    "minimatch": "^10.1.1",
    "open": "^10.1.0",
    "openai": "^6.16.0",
    "ora": "^9.0.0",
    "react": "^19.2.3",
    "string-width": "^8.1.0",
    "turndown": "^7.2.2",
    "undici": "^7.18.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
